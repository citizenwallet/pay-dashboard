{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
